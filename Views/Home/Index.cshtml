@page
@model BrainStormEra.Views.Home.IndexModel
@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BrainStormEra</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/HomePage/Guest/HomePageGuest.css">
    <link rel="stylesheet" href="~/css/HomePage/homePage.css">
    <link rel="stylesheet" href="~/css/HomePage/landing_page.css">

</head>

<body>
    <header class="container-fluid sticky-header">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/lib/img/BrainStormEra_logo.png" alt="Logo" class="logo_img">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">DASHBOARD</a>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="#">COURSE</a></li>
                    </ul>
                    <div class="profile d-flex align-items-center">
                        <a href="@Url.Action("LoginPage", "Login")" class="btn_login">Log In</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5">
        <!-- Header Section -->
        <div class="text-center mb-5 w-100 position-relative" style="padding-bottom: 200px;">
            <img src="~/lib/img/WelcomeHeader.png" class="img-welcomeheader">
            <img src="~/lib/img/Bot/bot-icon.png" class="robotwelcome">
        </div>

        <!-- Recommend Course Section -->
        <div class="text-center mb-4 mt-6" style="padding-top: 50px;">
            <h3>Recommend Course</h3>
        </div>
        <div class="row justify-content-center mb-5">
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card course-card">
                    <img src="/assests/img/C-example.png" class="card-img-top" alt="Course Image">
                    <div class="card-body">
                        <h5 class="card-title">C Programming Full Course</h5>
                        <p class="card-text">Price: 700,000₫</p>
                        <p class="card-text">By Phuc Nguyen</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card course-card">
                    <img src="/assests/img/java-example.png" class="card-img-top" alt="Course Image">
                    <div class="card-body">
                        <h5 class="card-title">Java Programming Full Course</h5>
                        <p class="card-text">Price: 700,000₫</p>
                        <p class="card-text">By Microsoft</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card course-card">
                    <img src="/assests/img/C2-example.png" class="card-img-top" alt="Course Image">
                    <div class="card-body">
                        <h5 class="card-title">C# Programming Full Course</h5>
                        <p class="card-text">Price: 700,000₫</p>
                        <p class="card-text">By Meta</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card course-card">
                    <img src="/assests/img/java2-exmaple.png" class="card-img-top" alt="Course Image">
                    <div class="card-body">
                        <h5 class="card-title">JavaScript Full Course</h5>
                        <p class="card-text">Price: 700,000₫</p>
                        <p class="card-text">Created by WIT</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Teach By Big Companies Section -->
        <div class="text-center mb-4 companies">
            <h3>Teach By Big Companies</h3>
        </div>
        <div class="d-flex justify-content-around align-items-center mb-5 companies-pic">
            <img src="/assests/img/window.png" alt="Company 1" class="img-fluid" style="max-width: 100px;">
            <img src="/assests/img/gg.png" alt="Company 2" class="img-fluid" style="max-width: 100px;">
            <img src="/assests/img/amazon.png" alt="Company 3" class="img-fluid" style="max-width: 100px;">
        </div>

        <!-- Diverse Course Section -->
        <div class="text-center mb-4">
            <h3>Diverse Course</h3>
        </div>
        <div class="row text-center mb-5 diverse-course">
            <div class="col-md-4 col-sm-6 mb-3">
                <img src="/assests/img/design.png" alt="Design Image" class="img-fluid mb-2">
                <h5>Design</h5>
            </div>
            <div class="col-md-4 col-sm-6 mb-3">
                <img src="/assests/img/IT.png" alt="IT and Software Image" class="img-fluid mb-2">
                <h5>IT and Software</h5>
            </div>
            <div class="col-md-4 col-sm-6 mb-3">
                <img src="/assests/img/invest.png" alt="Invest Image" class="img-fluid mb-2">
                <h5>Invest</h5>
            </div>
            <div class="col-md-4 col-sm-6 mb-3">
                <img src="/assests/img/photo.png" alt="Photography Image" class="img-fluid mb-2">
                <h5>Photography</h5>
            </div>
            <div class="col-md-4 col-sm-6 mb-3">
                <img src="/assests/img/marketing.png" alt="Marketing Image" class="img-fluid mb-2">
                <h5>Marketing</h5>
            </div>
            <div class="col-md-4 col-sm-6 mb-3">
                <img src="/assests/img/bussiness.png" alt="Business Image" class="img-fluid mb-2">
                <h5>Business</h5>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("~/Views/Shared/Footer/_Footer.cshtml")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>