@model Chapter
@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Chapter</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/baseChapter.css">
    <link rel="stylesheet" href="~/css/Chapter/AddNewChapter.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
</head>

<body>

    @await Html.PartialAsync("~/Views/Shared/Instructor/Header/_Header.cshtml")

    <div class="container-fluid ">
        <div class="row ">
            <!-- Sidebar -->
            @{

                string userRole = Context.Request.Cookies["user_role"];


                string courseId = Context.Request.Cookies["CourseId"];


                <div class="col-md-3 bg-SECONDARY sidebar p-3">
                    <a class="btn btn-primary w-100 mb-3" href="@Url.Action("ChapterManagement", "Chapter", new { courseId = courseId })">Add Chapter</a>
                    <a class="btn btn-outline-secondary w-100 mb-3" href="@Url.Action("DeleteChapter", "Chapter",new { courseId = courseId })">Delete Chapter</a>
                    <a class="btn btn-outline-secondary w-100" href="@Url.Action("ViewChapters", "Chapter", new { courseId = courseId })">View Chapter</a>
                </div>
            }

            <!-- Main Content for Add Chapter -->
            <div class="col-md-9 d-flex align-items-start vh-100">
                <div class="card w-100 ">
                    <div class="card-header gradient-header">
                        ADD NEW CHAPTER
                    </div>
                    <div class="card-body">
                        <form method="post">

                            <div class="mb-3">
                                <label for="chapterID" class="form-label">chapter ID</label>
                                <input asp-for="ChapterId" type="text" class="form-control" id="chapterTitle"
                                       placeholder="Enter Chapter Title">
                                <span asp-validation-for="ChapterId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label for="chapterTitle" class="form-label">Title Chapter</label>
                                <input asp-for="ChapterName" type="text" class="form-control" id="chapterTitle"
                                       placeholder="Enter Chapter Title">
                                <span asp-validation-for="ChapterName" class="text-danger"></span>

                            </div>
                            <div class="mb-3">
                                <label for="chapterDescription" class="form-label">Chapter Description</label>
                                <textarea asp-for="ChapterDescription" class="form-control" id="chapterDescription" rows="5"
                                          placeholder="Enter Chapter Description"></textarea>
                                <span asp-validation-for="ChapterDescription" class="text-danger"></span>

                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Create</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("~/Views/Shared/Footer/_Footer.cshtml")
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>