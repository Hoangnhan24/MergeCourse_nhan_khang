@{
}
@model List<Chapter>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Chapter</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Base CSS (Common Styles) -->
    <link rel="stylesheet" href="~/css/Chapter/ViewChapter.css">
    <!-- Page-Specific Styles -->
    <link href="~/css/baseChapter.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

</head>

<body>
    @await Html.PartialAsync("~/Views/Shared/Instructor/Header/_Header.cshtml")

    <div class="row">
        <!-- Sidebar -->
        @{

            string userRole = Context.Request.Cookies["user_role"];


            string courseId = Context.Request.Cookies["CourseId"];


            <div class="col-md-3 bg-SECONDARY sidebar p-3">
                <a class="btn btn-primary w-100 mb-3" href="@Url.Action("ChapterManagement", "Chapter", new { courseId = courseId })">Add Chapter</a>
                <a class="btn btn-outline-secondary w-100 mb-3" href="@Url.Action("DeleteChapter", "Chapter",new { courseId = courseId })">Delete Chapter</a>
                <a class="btn btn-outline-secondary w-100" href="@Url.Action("ViewChapters", "Chapter", new { courseId = courseId })">View Chapter</a>
            </div>
        }

        <!-- Main Content for View Chapter -->
        <div class="col-md-9 d-flex align-items-start vh-100">
            <div class="card w-100">
                <div class="card-header gradient-header">
                    VIEW CHAPTER
                </div>
                <div class="card-body">
                    <!-- List of chapters with edit and manage lessons buttons -->
                    @foreach (var c in Model)
                    {
                        <input type="hidden" name="CourseId" value="@ViewBag.CourseId" />

                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5>@c.ChapterName</h5>
                                <a class="btn btn-outline-primary btn-sm" href="/Chapter/EditChapter/@c.ChapterId">Edit</a>
                            </div>
                            <p>@c.ChapterDescription</p>
                            <a class="btn btn-primary" href="../html/ManageLesson.html">Manage Lessons</a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("~/Views/Shared/Footer/_Footer.cshtml")

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>